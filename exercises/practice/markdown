import
  std / unittest

import
  markdown

suite "markdown tests":
  test "parses normal text as a paragraph":
    check parse("This will be a paragraph") == "<p>This will be a paragraph</p>"
  test "parsing italics":
    check parse("_This will be italic_") ==
        "<p><em>This will be italic</em></p>"
  test "parsing bold text":
    check parse("__This will be bold__") ==
        "<p><strong>This will be bold</strong></p>"
  test "mixed normal, italics and bold text":
    check parse("This will _be_ __mixed__") ==
        "<p>This will <em>be</em> <strong>mixed</strong></p>"
  test "with h1 header level":
    check parse("# This will be an h1") == "<h1>This will be an h1</h1>"
  test "with h2 header level":
    check parse("## This will be an h2") == "<h2>This will be an h2</h2>"
  test "with h3 header level":
    check parse("### This will be an h3") == "<h3>This will be an h3</h3>"
  test "with h4 header level":
    check parse("#### This will be an h4") == "<h4>This will be an h4</h4>"
  test "with h5 header level":
    check parse("##### This will be an h5") == "<h5>This will be an h5</h5>"
  test "with h6 header level":
    check parse("###### This will be an h6") == "<h6>This will be an h6</h6>"
  test "with h7 header level":
    check parse("####### This will not be an h7") ==
        "####### This will not be an h7"
  test "h7 header level is a paragraph":
    check parse("####### This will not be an h7") ==
        "<p>####### This will not be an h7</p>"
  test "unordered lists":
    check parse("* Item 1\n* Item 2") ==
        "<ul><li>Item 1</li><li>Item 2</li></ul>"
  test "With a little bit of everything":
    check parse("# Header!\n* __Bold Item__\n* _Italic Item_") ==
        "<h1>Header!</h1><ul><li><strong>Bold Item</strong></li><li><em>Italic Item</em></li></ul>"
  test "with markdown symbols in the header text that should not be interpreted":
    check parse("# This is a header with # and * in the text") ==
        "<h1>This is a header with # and * in the text</h1>"
  test "with markdown symbols in the list item text that should not be interpreted":
    check parse("* Item 1 with a # in the text\n* Item 2 with * in the text") ==
        "<ul><li>Item 1 with a # in the text</li><li>Item 2 with * in the text</li></ul>"
  test "with markdown symbols in the paragraph text that should not be interpreted":
    check parse("This is a paragraph with # and * in the text") ==
        "<p>This is a paragraph with # and * in the text</p>"
  test "unordered lists close properly with preceding and following lines":
    check parse("# Start a list\n* Item 1\n* Item 2\nEnd a list") ==
        "<h1>Start a list</h1><ul><li>Item 1</li><li>Item 2</li></ul><p>End a list</p>"
